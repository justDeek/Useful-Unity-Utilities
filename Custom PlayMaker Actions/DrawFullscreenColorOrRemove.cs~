using UnityEngine;

namespace HutongGames.PlayMaker.Actions
{
	[ActionCategory(ActionCategory.GUI)]
	[Tooltip("In addition to 'DrawFullscreenColor'. Removes the set fullscreen color. NOTE: Uses OnGUI so you need a PlayMakerGUI component in the scene.")]
	public class RemoveFullscreenColor : FsmStateAction
	{
		[Tooltip("Flag for removing the fullscreen color or any previously set one. Sets the GUI-color alpha to 0.")]
		public FsmBool remove;

		public override void Reset()
		{
			remove = true;
		}

		public override void OnGUI()
		{
			var guiColor = GUI.color;
			guiColor.a = 0;
		}
	}
}